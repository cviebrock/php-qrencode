<?xml version="1.0"?>
<package version="2.0" xmlns="http://pear.php.net/dtd/package-2.0"
    xmlns:tasks="http://pear.php.net/dtd/tasks-1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0
http://pear.php.net/dtd/tasks-1.0.xsd
http://pear.php.net/dtd/package-2.0
http://pear.php.net/dtd/package-2.0.xsd">

  <name>qrencode</name>
  <channel>pecl.php.net</channel>

  <summary>PHP bindings to libqrencode</summary>


  <date>2012-09-18</date>
  <version>
    <release>0.0.3</release>
    <api>0.0.3</api>
  </version>
  <stability>
    <release>devel</release>
    <api>devel</api>
  </stability>

  <license>unknown</license

  <notes>

  </notes>

  <contents>
    <dir name="/">
      <file role='doc' name='EXPERIMENTAL'/>
      <file role='src' name='config.m4'/>
      <file role='src' name='qrencode.dsp'/>
      <file role='src' name='config.w32'/>
      <file role='src' name='qrencode.c'/>
      <file role='src' name='php_qrencode.h'/>
      <dir name="tests">
        <file role='test' name='qrencode.phpt'/>
      </dir>
    </dir>
  </contents>

  <dependencies>
    <required>
      <php>
        <min>5.0.0</min>
      </php>
      <pearinstaller>
        <min>1.4.0a1</min>
      </pearinstaller>
    </required>
  </dependencies>

  <providesextension>qrencode</providesextension>

  <extsrcrelease>
   <configureoption name="with-qrencode" default="autodetect" prompt="qrencode installation directory?" />
  </extsrcrelease>

</package>
